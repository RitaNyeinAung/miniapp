.search {
  position: fixed;
  width: 100vw;
  z-index: 100000;
  background: white;
}
.search_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0px 30rpx;
  background-color: #c3996b;
}
.search_header .logo {
  display: flex;
  align-items: center;
}
.search_header .logo image {
  width: 150rpx;
  height: 70rpx;
}
.search_header .notification {
  display: flex;
  align-items: center;
}
.search_header .notification image {
  width: 50rpx;
  height: 50rpx;
}
u-search {
  width: 60vw !important;
}
.search-page {
  background-color: white;
  position: absolute;
  height: 100rpx;
  top: 0;
  width: 100vw;
  min-height: 100vh;
  z-index: 1000;
}
.search-page .search-page-header {
  height: 80rpx;
  padding: 10rpx 30rpx;
}

