.search {
  position: fixed;
  width: 100vw;
  z-index: 100;
}
.search_header {
  width: 100%;
  height: 62rpx;
  padding: 16rpx 0;
  text-align: center;
  position: relative;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 62rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  display: flex;
}
.search_header .btnGo {
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -5rpx;
  width: 46rpx;
  height: 46rpx;
  background-size: 100% 100%;
}
.search_header .search {
  width: 475rpx;
  margin-left: 100rpx;
  background: none;
}
.search_header .shopclass {
  width: 50rpx;
  margin: -15rpx 20rpx 0 20rpx;
  position: absolute;
  right: 85rpx;
  height: 90rpx;
}
.search_header .shopclass image {
  width: 45rpx;
  height: 25rpx;
}
.search_header .shopclass .img-txt {
  font-size: 18rpx;
  line-height: 23rpx;
}
.search_header .btn-ng {
  position: absolute;
  top: 0;
  right: 20rpx;
  height: 100%;
  display: flex;
}
.search_header .btn-ng .fl {
  display: block;
  width: 12rpx;
  height: 12rpx;
  border: 6rpx solid #fff;
  border-radius: 50%;
  box-sizing: border-box;
  margin-left: 10rpx;
  margin-top: 44rpx;
}

