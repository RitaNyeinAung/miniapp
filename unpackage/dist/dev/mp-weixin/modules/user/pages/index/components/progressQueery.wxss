.com-content {
  padding: 20rpx;
  background: #fff;
  border-top: 2rpx solid #dfdfdd;
  border-bottom: 2rpx solid #dfdfdd;
}
.com-content .hd {
  display: flex;
}
.com-content .hd .hd-text {
  width: 550rpx;
  height: 130rpx;
  float: left;
}
.com-content .hd .hd-text .number {
  font-size: 25rpx;
  color: #333;
  padding-top: 20rpx;
}
.com-content .hd .hd-text .money {
  font-size: 28rpx;
  color: #757575;
  padding-top: 20rpx;
}
.com-content .hd .hd-text .money ._span {
  font-size: 28rpx;
  color: #d0111b;
  font-weight: bold;
}
.com-content .hd .status {
  font-size: 30rpx;
  color: #d02629;
  line-height: 110rpx;
}
.com-content .content {
  border-top: 2rpx solid #dfdfdd;
  padding-top: 38rpx;
  padding-bottom: 20rpx;
  display: flex;
}
.com-content .content image {
  width: 146rpx;
  height: 146rpx;
  border: 2rpx solid #dfdfdd;
  box-sizing: border-box;
}
.com-content .content .text {
  width: 500rpx;
  padding-left: 20rpx;
}
.com-content .content .text .p {
  font-size: 25rpx;
  color: #333;
  line-height: 38rpx;
  font-weight: bold;
  height: 76rpx;
}
.com-content .content .text .number {
  font-size: 25rpx;
  color: #999;
  padding-top: 20rpx;
}
.blank {
  padding: 10rpx 0;
  background-color: #f1f1f1;
}
.describe {
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 2rpx solid #dfdfdd;
  border-top: 2rpx solid #dfdfdd;
}
.describe .dt {
  font-size: 30rpx;
  color: #333;
  padding-top: 48rpx;
}
.describe .dd {
  font-size: 25rpx;
  color: #757575;
  padding-top: 20rpx;
  padding-bottom: 49rpx;
}
.progress {
  border-top: 2rpx solid #dfdfdd;
  background: #fff;
  padding: 0 20rpx;
}
.progress .h5 {
  padding-top: 40rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: #333;
}
.progress .examine {
  border-left: 2rpx solid #bbb;
  padding: 20rpx 0;
  margin-left: 20rpx;
  width: 700rpx;
}
.progress .examine .li {
  position: relative;
  margin-left: 38rpx;
  border: 2rpx solid #d5d5d5;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.progress .examine .li .icon {
  position: absolute;
  left: -56rpx;
  top: 0;
  width: 33rpx;
  height: 33rpx;
  border: 5rpx solid #d02629;
  box-sizing: border-box;
  border-radius: 50%;
  background: #fff;
}
.progress .examine .li .time {
  font-size: 25rpx;
  color: #d02629;
  padding-bottom: 20rpx;
}
.progress .examine .li .text {
  font-size: 25rpx;
  color: #d02629;
  padding-bottom: 20rpx;
}
.progress .examine .li .name {
  padding: 0;
  font-size: 25rpx;
  color: #d02629;
  padding-bottom: 20rpx;
}
.progress .button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #d02629;
  border: none;
  margin-top: 50rpx;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  text-align: center;
}

