page, .category {
  min-height: 100% !important;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.content {
  height: 100%;
  padding-top: 80rpx;
  background-color: white;
}
.content {
  display: flex;
}
.left-aside {
  flex-shrink: 0;
  width: 200rpx;
  min-height: 100%;
  background-color: white;
}
.f-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  font-size: 25rpx;
  padding: 0px 5px;
  color: #606266;
  position: relative;
}
.f-item.active {
  color: #c3996b;
  background: #f8f8f8;
}
.f-item.active:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 36rpx;
  width: 8rpx;
  background-color: #fa436a;
  border-radius: 0 4px 4px 0;
  opacity: .8;
}
.right-aside {
  flex: 1;
  overflow: hidden;
  padding-left: 20rpx;
  min-height: 100%;
  background-color: #f7f7f7;
}
.s-item {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding-top: 5rpx;
  font-size: 25rpx;
  color: #303133;
}
.t-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}
.t-list:after {
  content: '';
  flex: 99;
  height: 0;
}
.t-item {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 176rpx;
  font-size: 24rpx;
  color: #666;
  padding-bottom: 20rpx;
}
.t-item image {
  width: 130rpx;
  height: 130rpx;
  padding-bottom: 5px;
  background: #f7f7f7;
  margin-bottom: 5px;
}

