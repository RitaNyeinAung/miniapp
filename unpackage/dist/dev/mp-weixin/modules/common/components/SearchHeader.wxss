.search {
  width: 100vw;
  background: white;
}
.search_header {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0px 20rpx;
  background-color: #c3996b;
}
.search_header .logo {
  display: flex;
  align-items: center;
}
.search_header .logo image {
  width: 221rpx;
  height: 70rpx;
}
.search_header .notification {
  display: flex;
  align-items: center;
}
.search_header .notification image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.before {
  content: '';
  position: absolute;
  width: 100%;
  height: 145rpx;
  left: 0;
  border-radius: 0px 0px 12px 12px;
  background-color: #c3996b;
}
u-search {
  width: 60vw !important;
}
.search-page {
  background-color: white;
  position: absolute;
  height: 100rpx;
  top: 0;
  width: 100vw;
  min-height: 100vh;
  z-index: 10000000;
}
.search-page .search-page-header {
  height: 80rpx;
  padding: 10rpx 30rpx;
}

