.shopHomeList {
  background: #f1f1f1;
}
.head {
  background: #fff;
  width: 100%;
  overflow-x: auto;
  height: 90rpx;
  border-bottom: 1rpx solid #CBCBCB;
}
.headers {
  height: 100%;
  display: flex;
}
.headers .f2 {
  font-size: 26rpx;
  width: 150rpx;
  text-align: center;
  line-height: 90rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: inline;
}
.headers .avtive {
  color: #d02629;
}
.content {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #CBCBCB;
}
.content .contentli {
  display: flex;
  height: 50rpx;
  margin: 20rpx 0;
  justify-content: center;
  align-items: center;
  flex: 1;
  border-right: 1rpx solid #CBCBCB;
}
.content .contentli:last-child {
  border: 0;
}
.content .active {
  color: #d02629;
}
.list-shop {
  background-color: #f1f1f1;
}
.list-shop .li {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 25rpx 35rpx;
}
.list-shop .li .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-shop .li .header image {
  width: 80rpx;
  height: 70rpx;
  margin-right: 30rpx;
}
.list-shop .li .header .title {
  height: 130rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-shop .li .header .title .h4 {
  font-size: 30rpx;
}
.list-shop .li .header .title .h4 .shop-gradename {
  font-size: 23rpx;
  background: #de2d35;
  color: white;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  text-align: center;
}
.list-shop .li .header .title .goods-num {
  margin-top: 10rpx;
}
.list-shop .li .header .title .h6 {
  font-size: 26rpx;
}
.list-shop .li .header .initShop {
  width: 100rpx;
  height: 48rpx;
  border-radius: 48rpx;
  border: 2rpx solid #d02629;
  color: #d02629;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-shop .li .con {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-shop .li .con .con-div {
  margin: 0 5rpx;
  margin-top: 10rpx;
  position: relative;
  width: 225rpx;
}
.list-shop .li .con .con-div image {
  width: 100%;
  height: 225rpx;
}
.list-shop .li .con .con-div .con-pri {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin: 0;
  position: absolute;
  width: 100%;
  height: 40rpx;
  bottom: 0;
  padding: 0 15rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 24rpx;
  color: #fff;
}

