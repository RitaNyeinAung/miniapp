.content {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #f1f1f1;
  border-top: 1rpx solid #f1f1f1;
}
.content .li {
  display: flex;
  height: 110rpx;
  padding: 20rpx 0;
  margin: 0 60rpx;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.content .li .secdiv {
  text-align: center;
}
.content .li .secdiv .h4 {
  font-size: 40rpx;
}
.content .li .secdiv .h6 {
  font-size: 24rpx;
  color: #CECECE;
}
.content .active {
  border-bottom: 3rpx solid #d02629;
}
.item-wrap {
  padding-top: 20rpx;
}
.item-wrap .item-list {
  padding: 34rpx 20rpx;
  box-sizing: border-box;
  min-height: 300rpx;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
}
.item-wrap .item-list .img-wrap {
  padding: 20rpx 0;
}
.item-wrap .item-list .img-wrap image {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
}
.item-wrap .item-list .product {
  display: flex;
}
.item-wrap .item-list .product image {
  width: 90rpx;
  height: 90rpx;
}
.item-wrap .item-list .product .text1-hidden {
  line-height: 90rpx;
  width: 610rpx;
  padding-left: 33rpx;
  font-size: 20rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-wrap .item-list .text {
  font-size: 24rpx;
  color: #333;
  height: 70rpx;
  width: 100%;
  line-height: 40rpx;
  padding: 10rpx 0;
}
.item-wrap .item-list .inf-wrap {
  padding-top: 25rpx;
  display: flex;
}
.item-wrap .item-list .inf-wrap .inf {
  font-size: 20rpx;
  color: #999;
  width: 650rpx;
}
.item-wrap .item-list .inf-wrap .status {
  font-size: 20rpx;
  color: #d0111b;
}

