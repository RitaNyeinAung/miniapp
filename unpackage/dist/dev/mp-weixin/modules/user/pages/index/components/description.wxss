.content {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #CBCBCB;
}
.content .li {
  display: flex;
  height: 50rpx;
  margin: 20rpx 0;
  justify-content: center;
  align-items: center;
  flex: 1;
  border-right: 1rpx solid #CBCBCB;
}
.content .li:last-child {
  border: 0;
}
.content .active {
  color: #d02629;
}
.Process {
  background-color: #fff;
  padding: 30rpx 25rpx;
}
.standard {
  background-color: #fff;
  padding: 30rpx 25rpx;
}
.standard ._h2 {
  font-size: 28rpx;
  border-left: 10rpx solid #D29D29;
  padding-left: 10rpx;
  margin-bottom: 20rpx;
}
.standard ._td {
  border-color: #939393;
  font-size: 24rpx;
  padding: 20rpx;
  min-height: 65rpx;
}
.standard ._td:first-child {
  width: 240rpx;
}
.standard ._th {
  height: 65rpx;
  border-color: #939393;
  font-size: 28rpx;
  font-weight: normal;
  color: #939393;
}
.standard ._p {
  font-size: 24rpx;
  padding: 30rpx 0;
  line-height: 150%;
}
.standard ._p ._span {
  font-size: 24rpx;
  color: #0990D2;
}
.detail {
  background-color: #fff;
  padding: 0 25rpx 30rpx;
  overflow: hidden;
}
.detail ._h2 {
  border-left: 10rpx solid #D29D29;
  padding-left: 10rpx;
  margin: 30rpx 0;
  font-size: 28rpx;
}
.detail ._p {
  font-size: 28rpx;
  line-height: 120%;
  color: #525252;
}
.btm {
  background-color: #fff;
  position: fixed;
  width: 100%;
  height: 105rpx;
  border-top: 1rpx solid #ccc;
  bottom: 0;
}
.btm .btn-foot {
  display: flex;
  height: 100%;
}
.btm .btn-foot .foot {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btm .btn-foot .foot .span {
  margin-top: 1rpx;
  font-size: 22rpx;
}
.btm .btn-foot .foot image {
  width: 45rpx;
  height: 45rpx;
}
