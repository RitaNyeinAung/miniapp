.fl {
  float: left;
}
.content-wrap {
  background: #fff;
}
.content-wrap .dt {
  padding: 20rpx;
  position: relative;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.content-wrap .dt image {
  width: 114rpx;
  height: 114rpx;
  border-radius: 100%;
  box-sizing: border-box;
}
.content-wrap .dt .user {
  padding-left: 30rpx;
}
.content-wrap .dt .user .userId {
  font-size: 32rpx;
  color: #333;
  padding-top: 10rpx;
}
.content-wrap .dt .user .userName {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.content-wrap .dt .icon-btn {
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -12rpx;
  width: 14rpx;
  height: 24rpx;
  background-size: 100% 100%;
}
.content-wrap .dd {
  height: 90rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  position: relative;
  font-size: 28rpx;
  color: #3d4245;
  line-height: 90rpx;
  padding: 0 20rpx;
}
.content-wrap .dd .icon-btn {
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -12rpx;
  width: 14rpx;
  height: 24rpx;
  background-size: 100% 100%;
}
.content-wrap .toPass {
  height: 15rpx;
  background-color: #f1f1f1;
  border: 0;
}
.footer {
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
  background: #d02629;
  color: #fff;
  width: 100%;
  font-size: 32rpx;
}
.footer:active {
  box-shadow: 0 -10rpx 10rpx #ccc;
}
.mint-popup {
  font-size: 28rpx;
  background: none;
}
.password-wrap {
  width: 750rpx;
  text-align: center;
}
.password-wrap .li {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #ccc;
  box-sizing: border-box;
  color: #26a2ff;
  font-size: 30rpx;
  background: #fff;
}
.password-wrap .li:nth-child(3) {
  margin-top: 20rpx;
}

