/*  弹出层 */
.popup {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 990;
}
.popup.show {
  display: block;
}
.popup.show .mask {
  -webkit-animation: showPopup 0.2s linear both;
          animation: showPopup 0.2s linear both;
}
.popup.show .layer {
  -webkit-animation: showLayer 0.2s linear both;
          animation: showLayer 0.2s linear both;
}
.popup.show .layer image {
  background-color: #F8F8F8;
}
.popup.hide .mask {
  -webkit-animation: hidePopup 0.2s linear both;
          animation: hidePopup 0.2s linear both;
}
.popup.hide .layer {
  -webkit-animation: hideLayer 0.2s linear both;
          animation: hideLayer 0.2s linear both;
}
.popup.none {
  display: none;
}
.popup .mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.4);
}
.popup .layer {
  position: fixed;
  z-index: 99;
  bottom: 0;
  width: 100%;
  height: auto;
  border-radius: 10rpx 10rpx 0 0;
  background-color: #fff;
}
.popup .layer .middle {
  overflow: auto;
  margin: 70rpx 0rpx;
  min-height: 50vh;
  max-height: 70vh;
}
.popup .layer .bottom {
  width: 100%;
  padding: 0rpx 30rpx;
  position: fixed;
  bottom: 0;
}
.popup .layer .bottom .btn {
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 100rpx;
  background: #c3996b;
  font-size: 30rpx;
  color: #fff;
  margin: 30rpx auto 20rpx;
  width: 100%;
}
.popup .layer .bottom .btn.disabled {
  opacity: 0.3;
}
.popup .layer .popup-title {
  font-size: 12px;
  font-weight: bold;
  width: 100%;
  display: block;
  padding: 15rpx 0rpx 15rpx 0rpx;
  text-align: center;
  position: fixed;
  top: 0;
}
.popup .layer .empty-address {
  width: 100%;
  text-align: center;
  margin: 50rpx 0rpx;
  height: 100%;
}
.popup .layer .coupon-box {
  border-radius: 5px;
  height: 200rpx;
  margin-bottom: 20rpx;
  display: grid;
  grid-template-columns: 2.5fr 1.5fr;
  color: white;
  border: 1px solid #c3996b;
}
.popup .layer .coupon-box .info {
  margin: 10rpx;
  padding: 20rpx 0px 20rpx 10px;
  border-radius: 5px;
  background: linear-gradient(to left, rgba(195, 153, 107, 0.5), rgba(195, 153, 107, 0.9));
}
.popup .layer .coupon-box .info .money {
  font-size: 17px;
  margin-bottom: 20rpx;
}
.popup .layer .coupon-box .info .money .title {
  margin-left: 20rpx;
  font-size: 10px;
}
.popup .layer .coupon-box .info .condition {
  font-size: 10px;
  margin-bottom: 10rpx;
}
.popup .layer .coupon-box .info .date {
  font-size: 10px;
}
.popup .layer .coupon-box .receive-coupon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #c3996b;
  font-weight: bold;
  font-size: 14px;
}
@-webkit-keyframes showPopup {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@keyframes showPopup {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@-webkit-keyframes hidePopup {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@keyframes hidePopup {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@-webkit-keyframes showLayer {
0% {
    -webkit-transform: translateY(120%);
            transform: translateY(120%);
}
100% {
    -webkit-transform: translateY(0%);
            transform: translateY(0%);
}
}
@keyframes showLayer {
0% {
    -webkit-transform: translateY(120%);
            transform: translateY(120%);
}
100% {
    -webkit-transform: translateY(0%);
            transform: translateY(0%);
}
}
@-webkit-keyframes hideLayer {
0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    -webkit-transform: translateY(120%);
            transform: translateY(120%);
}
}
@keyframes hideLayer {
0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    -webkit-transform: translateY(120%);
            transform: translateY(120%);
}
}
