.idPhotos {
  border-bottom: 1rpx solid #fff;
  padding: 0 27rpx;
  background-color: #fff;
}
.idPhotos ._h4 {
  padding: 30rpx 0 25rpx;
  color: #BDBDBD;
  font-size: 32rpx;
}
.idPhotos .first-upload {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 32rpx;
  color: #959595;
}
.idPhotos .first-upload .sec-upload {
  width: 300rpx;
  height: 300rpx;
  border: 1rpx dashed  #BDBDBD;
}
.idPhotos .first-upload .sec-upload .images {
  width: 100%;
  height: 100%;
}
.idPhotos .first-upload .input-btn {
  width: 300rpx;
  height: 300rpx;
}
.idPhotos .first-upload .input-btn .frame {
  width: 100%;
  height: 100%;
}
.idPhotos .p {
  margin: 30rpx 0 40rpx;
  font-size: 24rpx;
  color: #959595;
  text-align: left;
}
.u-delete-icon {
  top: 10rpx;
  right: 10rpx;
  z-index: 10;
  background-color: #fa3534;
  border-radius: 100rpx;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.bankInfo {
  background-color: #f1f1f1;
  height: 100%;
}
.hd {
  padding: 20rpx;
}
.hd .title {
  border-left: 6rpx solid #d02629;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #111111;
}
.hd .span {
  font-size: 18rpx;
  color: #989898;
  margin-left: 10rpx;
}
.per-center ._li {
  background-color: #fff;
  border-bottom: 2rpx solid #F1F1F1;
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.per-center ._li text {
  width: 260rpx;
  font-size: 32rpx;
  color: #BDBDBD;
}
.per-center ._li u-input {
  width: 520rpx;
  border: 0;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.per-center ._li .singo {
  width: 500rpx;
  border: 0;
  font-size: 28rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.per-center .businessScope {
  margin-bottom: 10rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.per-center .businessScope .title {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  text-align: left;
}
.per-center .businessScope textarea {
  width: 700rpx;
  height: 160rpx;
  resize: none;
  border: 0;
  padding: 10rpx;
}
.button {
  margin: 45rpx 20rpx 25rpx;
  height: 90rpx;
  color: #fff;
  background-color: #d02629;
  border-radius: 90rpx;
  border: 0;
  width: 710rpx;
  outline: none;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}

