.customer {
  background-color: #f1f1f1;
  height: 100%;
}
.notice-wrap {
  height: 90rpx;
  padding: 10rpx 0;
  background: #fff;
  line-height: 60rpx;
  display: flex;
  border-top: 2rpx dotted #f1f1f1;
  border-bottom: 2rpx dotted #f1f1f1;
}
.notice-wrap .title {
  width: 150rpx;
  font-size: 32rpx;
  color: #111;
  box-sizing: border-box;
  text-align: center;
}
.notice-wrap .bar {
  width: 480rpx;
  line-height: 60rpx;
}
.notice-wrap .link {
  width: 150rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.service .dt {
  width: 710rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #555;
  float: left;
}
.service .dd {
  background: #fff;
  height: 230rpx;
  width: 33.3333333333%;
  box-sizing: border-box;
  border-right: 2rpx solid #dfdfdf;
  border-bottom: 2rpx solid #dfdfdf;
  float: left;
  text-align: center;
}
.service .dd .img-wrap {
  padding-top: 70rpx;
  height: 70rpx;
}
.service .dd .p {
  font-size: 28rpx;
  color: #555;
  line-height: 170rpx;
}
.service .dd:last-child {
  border-right: 0;
}
.service .img1 {
  width: 56rpx;
  height: 60rpx;
}
.service .img2 {
  width: 65rpx;
  height: 55rpx;
}
.service .img3 {
  width: 68rpx;
  height: 54rpx;
}
.problem .title {
  line-height: 90rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #555;
}
.problem .item-wrap {
  padding-top: 30rpx;
  background: #fff;
}
.problem .item-wrap .item-main {
  width: 710rpx;
  height: 160rpx;
  padding: 0 20rpx 0;
  margin-bottom: 20rpx;
}
.problem .item-wrap .item-main .dt {
  box-sizing: border-box;
  padding: 40rpx 45rpx;
  float: left;
  background: #fde7e8;
  color: #ba4c52;
  font-size: 32rpx;
}
.problem .item-wrap .item-main .dd {
  width: 540rpx;
  height: 160rpx;
  float: left;
  text-align: center;
}
.problem .item-wrap .item-main .dd .span {
  width: 50%;
  height: 50%;
  line-height: 80rpx;
  background: #fafafa;
  font-size: 26rpx;
  color: #555;
  float: left;
}
.problem .item-wrap .item-main:nth-child(2n) .dt {
  background: #fdf8e7;
  color: #b38835;
  float: left;
}
.problem .item-wrap .item-main:nth-child(3n) .dt {
  background: #e8faff;
  color: #3b7d8f;
  float: left;
}

