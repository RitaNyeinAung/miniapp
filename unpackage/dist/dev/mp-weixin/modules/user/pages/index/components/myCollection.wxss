.tab-hd {
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  display: flex;
  text-align: center;
}
.tab-hd .fl {
  width: 50%;
}
.tab-hd .fl .htxt {
  display: inline-block;
  width: 250rpx;
  height: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}
.tab-hd .fl.active .htxt {
  color: #d02629;
  border-bottom: 4rpx solid #d02629;
  box-sizing: border-box;
  text-align: center;
}
.dl .dd {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  position: relative;
}
.dl .dd .time {
  text-indent: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 25rpx;
  background: #f1f1f1;
}
.dl .dd .item-wrap {
  border-bottom: 18rpx solid #f1f1f1;
  padding: 20rpx;
  width: 100%;
}
.dl .dd .item-wrap.active {
  -webkit-transform: translate(50rpx);
          transform: translate(50rpx);
}
.dl .dd image {
  width: 150rpx;
  height: 150rpx;
}
.dl .dd .item {
  padding-left: 25rpx;
  width: 560rpx;
  float: right;
}
.dl .dd .item .text {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  height: 80rpx;
}
.dl .dd .item .Price {
  font-size: 28rpx;
  color: #f23030;
  padding-top: 35rpx;
}
.dl .dd .item .Price .pri-member {
  font-size: 32rpx;
}
.dl .dd .item .Price .btn {
  font-size: 32rpx;
  float: right;
}

