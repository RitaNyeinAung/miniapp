.Quickstart {
  background: linear-gradient(to bottom, #f4f4f4, #ececec);
  padding: 0 20rpx;
}
.Quickstart .index_flash {
  background-color: #f2f2f2;
  overflow: hidden;
  padding-top: 20rpx;
}
.Quickstart .index_flash .flash_data {
  height: 50rpx;
  background-color: #fff;
  border-radius: 50rpx;
}
.Quickstart .index_flash .flash_data .index_flash_logo {
  width: 80rpx;
  height: 50rpx;
  padding-top: 2px;
  float: left;
  background-color: #d02629;
  color: #fff;
  text-align: center;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.Quickstart .index_flash .flash_data .box-wrap {
  position: relative;
  width: 510rpx;
  height: 40rpx;
  margin-top: 9rpx;
  float: left;
  margin-left: 20rpx;
  overflow: hidden;
}
.Quickstart .index_flash .flash_data .box-wrap .scroll_box {
  width: 510rpx;
  left: 0;
  top: 0;
  transition: 1s all ease;
  overflow: hidden;
  background: #FFFFFF;
}
.Quickstart .index_flash .flash_data .box-wrap .scroll_box .swiper {
  height: 40rpx;
}
.Quickstart .index_flash .flash_data .More {
  width: 80rpx;
  height: 50rpx;
  display: block;
  float: right;
  text-align: right;
  line-height: 50rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #9b9595;
  padding-right: 6px;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}
.Quickstart .index_Ctrl {
  width: 100%;
  overflow: hidden;
}
.Quickstart .index_Ctrl .index_Ctrl_auto {
  width: 710rpx;
  overflow: hidden;
  margin: auto;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
}
.Quickstart .index_Ctrl .link {
  display: block;
  width: 115rpx;
  height: 160rpx;
  float: left;
  margin-right: 33rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.Quickstart .index_Ctrl .link:nth-child(5n) {
  margin-right: 0;
}
.Quickstart .index_Ctrl .link-img {
  width: 115rpx;
  height: 115rpx;
  display: block;
  border-radius: 50%;
}
.Quickstart .index_Ctrl .link-txt {
  width: 100%;
  height: 45rpx;
  display: block;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  line-height: 45rpx;
  font-weight: 500;
}

